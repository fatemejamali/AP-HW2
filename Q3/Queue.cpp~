#include"Queue.h"
#include<iostream>
#include<fstream>
 
Queue::Queue(std::string myfile){
 
  std::cout<<"constructor1"<<std::endl;
  filename=myfile;
  std::ifstream ifile{filename};
  ifile>>L;
  //std::cout<<L<<std::endl; 
  A=new double [L];
  ifile>>A[0]>>a>>A[1]>>a>>A[2]>>a>>A[3];

  read=A;
  write=A+3;
   
}


void  Queue::displayQueue()
{
  for(int i{};i<L;i++)
    { 
      std::cout<<A[i]<<std::endl;
    }
}

void Queue::enQueue(double number)
{
  if((abs(write-read)<=6)&& (abs(read-write)>1))
    {
      if(write<A+6)
	{
	  *(write+1)=number;
	  write++;
	  std::cout<<"Your data was saved with a numeric value of "<<number<<std::endl;
	}
      if(write == A+6)
	{
	  write=A-1;
     
        }
    
    }
  else
      std::cout<<"There is not enough space to store your data."<<std::endl;
}


double Queue::deQueue()
{
  if(read < A+7)
    {
  s=*read;
  read++;
    }
  if(read == A+7)
    {
      read=A;
     }  
      return s;     
}

Queue::~Queue()
{
  std::cout<<"destructor"<<std::endl;
  delete[] A;
}









